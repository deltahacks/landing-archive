---
import "@fontsource/montserrat";

const siteURL = "https://archive.deltahacks.com";

interface Links {
  year: number;
  url: string;
}
const external: Links[] = [
  {
    year: 2024,
    url: "https://deltahacks.com",
  },
  {
    year: 2023,
    url: "https://2023.deltahacks.com",
  },

  {
    year: 2022,
    url: "https://2022.deltahacks.com",
  },
  {
    year: 2021,
    url: "https://2021.deltahacks.com",
  },
  {
    year: 2020,
    url: "https://2020.deltahacks.com",
  },
  {
    year: 2019,
    url: "https://2019.deltahacks.com",
  },
  {
    year: 2018,
    url: "https://2018.deltahacks.com",
  },
  {
    year: 2017,
    url: "https://2017.deltahacks.com",
  },
  {
    year: 2016,
    url: "https://2016.deltahacks.com",
  },
  {
    year: 2015,
    url: "https://2015.deltahacks.com",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- HTML Meta Tags -->
    <title>DeltaHacks Archive</title>
    <meta
      name="description"
      content="Archive links of all the past DeltaHacks landing website designs."
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content={siteURL} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="DeltaHacks Archive" />
    <meta
      property="og:description"
      content="Archive links of all the past DeltaHacks landing website designs."
    />
    <meta property="og:image" content={siteURL + "/og.png"} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={siteURL.replace("https://", "")} />
    <meta property="twitter:url" content={siteURL} />
    <meta name="twitter:title" content="DeltaHacks Archive" />
    <meta
      name="twitter:description"
      content="Archive links of all the past DeltaHacks landing website designs."
    />
    <meta name="twitter:image" content={siteURL + "/og.png"} />

    <!-- meta color theme -->
    <meta name="theme-color" content="#FF375E" />
    <meta name="msapplication-navbutton-color" content="#FF375E" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#FF375E" />
  </head>

  <body
    class="w-full px-4 py-6 mx-auto overflow-x-hidden font-sans text-white bg-primary"
  >
    <h1 class="text-6xl md:text-[4em] flex gap-4 items-center">
      <span><strong>Delta</strong>Hacks</span>
      <span class="hidden md:block">
        <svg
          height="1em"
          class="aspect-square"
          viewBox="0 0 1045 1045"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M103.664 981.673L948.338 982.509L1043.22 802.142H409.431L520.724 628.776L372.961 355.718L103.664 981.673Z"
            fill="#838383"></path>
          <path
            d="M103.664 981.673L0 804.65L421.24 73.2544L745.921 643.615L519.888 628.776L416.014 451.753L103.664 981.673Z"
            fill="white"></path>
          <path
            d="M419.568 69.0747H624.701L1043.22 802.142H409.431L520.724 628.777L719.274 628.15L419.568 69.0747Z"
            fill="#CECECE"></path>
        </svg>
      </span>
    </h1>
    <p class="pb-4 text-xl">Archive of past DeltaHacks websites.</p>
    <ol class="flex flex-col gap-4 md:translate-x-1/3">
      {
        external.map(({ year, url }) => (
          <li>
            <a
              href={url}
              class="relative block w-full h-48 transition-colors border border-white hover:bg-white hover:text-primary"
              target="_blank"
            >
              <div class="absolute text-[4em] bottom-2 left-5">{year}</div>
            </a>
          </li>
        ))
      }
    </ol>
    <footer
      class="pt-8 pb-8 mx-auto mt-4 border-t border-white border-opacity-40"
    >
      <p class="text-sm text-center">
        Inspired from <a
          href="https://archive.stormhacks.com"
          target="_blank"
          class="underline">StormHacks</a
        > | Source available on <a
          href="https://github.com/deltahacks/landing-archive"
          class="underline"
          target="_blank">GitHub</a
        >
      </p>
    </footer>
  </body>
</html>

<style is:global>
  * {
    font-family: "Monserrat", sans-serif;
  }
</style>
